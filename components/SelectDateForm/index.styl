.select-date
  padding: 32px 18px 26px

  .row
    margin-left: -18px
    margin-right: -18px

  &__item
    position: relative
    width: 100%
    height: 70px
    &_month
      .value
        font-size: 18px
        font-weight: 900
        &:first-letter
          text-transform: capitalize
    &_day
      .value
        > div
          display: inline-block
          > *
            display: block
            font-size: 14px
            &:first-letter
              text-transform: capitalize
            &:first-child
              font-size: 16px
              font-weight: 900
              margin-bottom: 4px
    &__content
      display: inline-block
      width: calc(100% - 82px)
      height: 100%
      line-height: 70px
      border-top: 1px #000000 solid
      border-bottom: 1px #000000 solid
      text-align: center
      .value
        display: inline-block
        line-height: 18px
        vertical-align: middle

  .btn
    &-open-list
      position: absolute
      top: 0
      right: 0
      height: 100%
      width: 78px
      line-height: 78px
      outline: 4px #000000 solid
      text-align: center
      &:before
        content: ''
        display: inline-block
        width: 31px
        height: 18px
        background: url(/images/intro/btn-list-open-arrow.svg) no-repeat 0 0
    &-save-rec
      width: 100%
      height: 70px;
      background-color: #ff0000;
      color: #ffffff
      line-height: 70px
      font-size: 18px
      font-weight: 700
      margin-top: 57px

