.modal
  background #fff
  margin-top 46px
  // outline 4px solid #000
  min-height 70px
  position relative
  border: 4px solid #000;
  box-sizing: content-box;
  &Container
    position: absolute;
    width: 100%;
    z-index: 1000;
  &__close
    width 80px
    height 70px
    background #fff url(/images/modal/close.png) center center no-repeat
    outline 1px solid #000
    display block
    position absolute
    right 0
    top 0
  &__title
    height 97px
    font-size 2.080em
    line-height 96px
    border-bottom 1px solid #000
    padding 0px 16px
    letter-spacing: -0.9px;

