.track-section-items
  + .track-section-items
    margin-top: 12px

  .track-item
    margin-top: 1px

.track-item
  padding: 10px 15px 10px 18px
  background-color: #ffffff
  font-weight: 600
  margin-top: 12px
  &_exam
    padding-bottom: 30px
    background-color: #ff0000
    color: #ffffff
    .track-item__topic
      font-size: 25px
    .track-item__content
      margin-top: 20px
    .target
      border: 1px #ffffff solid
      font-size: 18px
      font-weight: 600
      line-height: 20px
      padding: 14px 0
      background-color: rgba(255, 255, 255, 0.3);
      text-align: center

  &:first-child
    margin-top: 0
  &__header
    line-height: 30px
    clearfix()
  &__topic,
  &__date
    display: inline-block
    vertical-align: top
  &__topic
    font-size: 20px
    //line-height: 22px
    margin-right: 7px
  &__date
    font-size: 12px
    line-height: 18px
  &__content
    margin-top: 12px
  //  &__inner
  //    padding-top: 20px

  + .track-section-items
    margin-top: 12px

.btn
  &_track-toggle
    position: relative
    display: block
    width: 30px
    height: 30px
    border: 2px #000000 solid
    text-align: center
    box-sizing(border-box)

    &:after
      content:''
      position: absolute
      left: 50%
      top: 50%
      margin-left: -5px
      margin-top: -3px
      width: 10px
      height: 6px
      background: url("/images/track/arrow.png") no-repeat 0 0;
      transition(all, 0.4s, ease)

    &_close
      &:after
        transform(rotateX(0deg))

    &_open
      &:after
        transform(rotateX(-180deg))

  &-black,
  &-light-green,
  &-red
    height: 38px
    line-height: 38px
    text-transform: uppercase
    font-weight: 500
    color: #ffffff
    padding: 0 20px
  &-black
    background-color: #000000
    margin-right: 8px
  &-light-green
    background-color: #00e761

.track
  .col-4
    .track-item__content__inner
      padding-top: 20px
      border-top: 1px #000000 solid

.fLeft
  float: left
.fRight
  float: right

@media (max-width: 1366px)
  .track
    &-item
      padding: 10px 12px
      &_exam
        .track-item__topic
          font-size: 22px
      &__topic
        font-size: 16px
      &__date
        font-size: 10px;
        line-height: 22px;
